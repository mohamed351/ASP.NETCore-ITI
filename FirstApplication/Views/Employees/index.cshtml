@model IEnumerable<Employees>

<div class="container-fluid">
<a class="btn btn-success" asp-action="Create" asp-asp-controller="Employees">Create new Employees</a>
<br/>
<br/>
<table class="table table-border"> 
<thead>
  <tr>
     <td>ID</td>
     <td>Name</td>
     <td>Salary</td>
     <td></td>
  </tr>
  </thead>

  
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
             <td>@item.Name</td>
             <td>@item.Salary</td>
             <td>  
                 <a asp-action="Details" asp-controller="Employees" asp-route-id="@item.ID" class="btn btn-success"> Details</a>
                 <a asp-action="Edit" asp-controller="Employees" asp-route-id="@item.ID" class="btn btn-primary"> Edit</a>

              <a asp-action="Delete" asp-controller="Employees" asp-route-id="@item.ID" class="btn btn-danger" onclick="return confirm('are you sure to delete employee')"> Delete</a>
             </td>
        </tr>
    }
</tbody>

    
</table>
</div>